<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/status_bar">

    <LinearLayout
        android:id="@+id/start_posters"
        style="@style/StartFullWidth"
        android:layout_marginTop="@dimen/size_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_go"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_1"
                style="@style/StartPoster"
                android:src="@drawable/poster_1"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_2"
                style="@style/StartPoster"
                android:src="@drawable/poster_2"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_3"
                style="@style/StartPoster"
                android:src="@drawable/poster_3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_4"
                style="@style/StartPoster"
                android:src="@drawable/poster_4"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_5"
                style="@style/StartPoster"
                android:src="@drawable/poster_5"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_6"
                style="@style/StartPoster"
                android:src="@drawable/poster_6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_7"
                style="@style/StartPoster"
                android:src="@drawable/poster_7"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_8"
                style="@style/StartPoster"
                android:src="@drawable/poster_8"/>

            <test.dmisb.toothpick.ui.widget.AutoWidthImage
                android:id="@+id/poster_9"
                style="@style/StartPoster"
                android:src="@drawable/poster_9"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/start_go"
        style="@style/StartButton"
        android:theme="@style/AuthButtonTheme"
        android:text="@string/start_go"
        app:layout_constraintTop_toBottomOf="@+id/start_posters"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>